DS18B20_VERSION = 1.0.0
DS18B20_SITE=package/DS18B20/src
DS18B20_SITE_METHOD=local
DS18B20_MAKE_ENV = $(TARGET_MAKE_ENV)
DS18B20_MAKE_OPTS = CC="$(TARGET_CC)" CFLAGS="$(TARGET_CFLAGS)" \
	LIBS="$(DS18B20_EXTRA_LIBS)"
	
define DS18B20_BUILD_CMDS
	$(DS18B20_MAKE_ENV) $(MAKE) $(DS18B20_MAKE_OPTS) -C $(@D)
endef
define DS18B20_INSTALL_TARGET_CMDS
	$(DS18B20_MAKE_ENV) $(MAKE) $(DS18B20_MAKE_OPTS) \
		BASEDIR="$(TARGET_DIR)" install -C $(@D)
endef

$(eval $(generic-package))